<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="${persistenceUnitName}" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>fr.ocr.prj06.entity.stub.DbCommentaire</class>
        <class>fr.ocr.prj06.entity.stub.DbLongueur</class>
        <class>fr.ocr.prj06.entity.stub.DbSecteur</class>
        <class>fr.ocr.prj06.entity.stub.DbSpot</class>
        <class>fr.ocr.prj06.entity.stub.DbTopo</class>
        <class>fr.ocr.prj06.entity.stub.DbUser</class>
        <class>fr.ocr.prj06.entity.stub.DbVoie</class>


        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/ocr_projet06?serverTimezone=UTC"/>

            <property name="hibernate.connection.username" value="projet06"/>
            <property name="hibernate.connection.password" value="projet06"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hibernate.hbm2ddl.auto" value="validate"/>


        </properties>
    </persistence-unit>
</persistence>
