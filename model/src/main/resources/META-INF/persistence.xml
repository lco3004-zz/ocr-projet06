<?xml version="1.0" encoding="UTF-8"?>
    <persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="${persistenceUnitName}" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>fr.ocr.prj06.stubs.dbCommentaireEntity</class>
        <class>fr.ocr.prj06.stubs.dbCpteEntity</class>
        <class>fr.ocr.prj06.stubs.dbLongueurEntity</class>
        <class>fr.ocr.prj06.stubs.dbSecteurEntity</class>
        <class>fr.ocr.prj06.stubs.dbSpotEntity</class>
        <class>fr.ocr.prj06.stubs.dbTopoEntity</class>
        <class>fr.ocr.prj06.stubs.dbUserEntity</class>
        <class>fr.ocr.prj06.stubs.dbVoieEntity</class>

        <!-- Cache JPA -->
        <shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>

        <properties>
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/ocr_projet06?serverTimezone=UTC"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="projet06"/>
            <property name="hibernate.connection.password" value="projet06"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>

            <!-- Cache de second niveau
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.ehcache.EhCacheRegionFactory"/>
            <property name="hibernate.cache.default_cache_concurrency_strategy" value="read-only"/>
            <property name="net.sf.ehcache.configurationResourceName" value="META-INF/ehcache.xml"/>
            marche pas
            -->
            <!-- Pool de connexion -->
            <property name="hibernate.c3p0.min_size" value = "5"/>
            <property name="hibernate.c3p0.max_size" value="20"/>
            <property name="hibernate.c3p0.timeout" value="300"/>
            <property name="hibernate.c3p0.max_statements" value="50"/>
            <property name="hibernate.c3p0.idle_test_period" value="60"/>
        </properties>
    </persistence-unit>
</persistence>
