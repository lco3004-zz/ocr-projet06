<?xml version="1.0" encoding="UTF-8"?>

<Configuration monitorInterval="60">
    <Properties>
        <Property name="log-path">./logProjet06</Property>
        <Property name="archive">${log-path}/archive</Property>
    </Properties>
    <Appenders>
        <RollingFile name="RollingFile-Appender"
                     fileName="${log-path}/ocr_Projet06.log"
                     filePattern="${archive}/projet06.log.%d{yyyy-MM-dd-hh}.gz">
            <PatternLayout pattern="[%-5level] %d{yyyy-MM-dd} [%F %L] %c{1} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="30 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
        Â 
    </Appenders>
    <Loggers>
        <Logger name="ocr_Projet06" level="info" additivity="false">
            <AppenderRef ref="RollingFile-Appender" level="info"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="RollingFile-Appender"/>
        </Root>
    </Loggers>
</Configuration>


