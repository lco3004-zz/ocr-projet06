<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30" name="OCR-Projet06">
    <Properties>
        <Property name="filename">./logsappli/projet06.log</Property>
    </Properties>

    <Appenders>
        <File name="File" fileName="${filename}">
            <PatternLayout>
                <MarkerPatternSelector defaultPattern="%sn. %d{HH:mm:ss.SSS} [%t] %-5level %logger{64} - %msg : Logger=%logger%n">
                    <PatternMatch key="CLASS" pattern="%sn. %d{HH:mm:ss.SSS} [%t] %-5level %logger{64} - %msg : Class=%class%n"/>
                </MarkerPatternSelector>
            </PatternLayout>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <MarkerPatternSelector defaultPattern="%sn. %d{HH:mm:ss.SSS} [%t] %-5level %logger{64} - %msg : Logger=%logger%n">
                    <PatternMatch key="CLASS" pattern="%sn. %d{HH:mm:ss.SSS} [%t] %-5level %logger{64} - %msg : Class=%class%n"/>
                </MarkerPatternSelector>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
    <Logger name="fr.ocr.prj06.hibernate.logs.LogsProjet" level="TRACE" additivity="false">
            <AppenderRef ref="File" />
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="org.hibernate" level="DEBUG" additivity="false">
            <AppenderRef ref="File" />
        </Logger>
        <Root level="WARN" >
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>

