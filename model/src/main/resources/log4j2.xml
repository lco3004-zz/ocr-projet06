<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30" name="OCR-Projet06">
    <Properties>
        <Property name="framework_logs">./logs_projet06/frameworks_logs.log</Property>
        <Property name="projet06_logs">./logs_projet06/projet06_logs.log</Property>
    </Properties>

    <Appenders>
        <File name="FileAppli" fileName="${projet06_logs}">
            <PatternLayout>
                <MarkerPatternSelector
                        defaultPattern="%sn. %d{dd/MM - HH:mm:ss.SSS} [%t] %-5level %logger{256} - %msg : Logger=%logger%n">
                    <PatternMatch key="CLASS"
                                  pattern="%sn. %d{dd/MM - HH:mm:ss.SSS} [%t] %-5level %logger{128} - %msg : Class=%class%n"/>
                </MarkerPatternSelector>
            </PatternLayout>
        </File>
        <File name="FileSql" fileName="${framework_logs}">
            <PatternLayout>
                <MarkerPatternSelector
                        defaultPattern="%sn. %d{dd/MM - HH:mm:ss.SSS} [%t] %-5level %logger{512} - %msg : Logger=%logger%n">
                    <PatternMatch key="CLASS"
                                  pattern="%sn. %d{dd/MM - HH:mm:ss.SSS} [%t] %-5level %logger{256} - %msg : Class=%class%n"/>
                </MarkerPatternSelector>
            </PatternLayout>
        </File>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <MarkerPatternSelector
                        defaultPattern="%sn. %d{HH:mm:ss} [%t] %-5level %logger{64} - %msg : Logger=%logger%n">
                    <PatternMatch key="CLASS"
                                  pattern="%sn. %d{HH:mm:ss} [%t] %-5level %logger{64} - %msg : Class=%class%n"/>
                </MarkerPatternSelector>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="fr.ocr.prj06.logs.LogsProjet" level="DEBUG" additivity="false">
            <AppenderRef ref="FileAppli"/>
        </Logger>
        <Logger name="org.hibernate" level="DEBUG" additivity="false">
            <AppenderRef ref="FileSql"/>
        </Logger>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>

