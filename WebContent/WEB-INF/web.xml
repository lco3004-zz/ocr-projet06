<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Pri_confirmationCreationTopo</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pri_confirmationCreationTopo.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Pri_PageErreurInterne</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pri_PageErreurInterne.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Pri_ListeDesTopos</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pri_ListeDesTopos.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Pri_ListeDesSpots</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pri_ListeDesSpots.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Pri_confirmationInscription</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pri_confirmationInscription.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Pri_ListeGrimpeurs</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pri_ListeGrimpeurs.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Pub_ConnexionGrimpeur</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pub_ConnexionGrimpeur.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Pub_InscriptionGrimpeur</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pub_InscriptionGrimpeur.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Pri_AjouterUnTopo</servlet-name>
        <jsp-file>/WEB-INF/jsp/Pri_AjouterUnTopo.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Pri_AjouterUnTopo</servlet-name>
        <url-pattern>/AjouterUnTopo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Pub_InscriptionGrimpeur</servlet-name>
        <url-pattern>/InscriptionGrimpeur</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Pub_ConnexionGrimpeur</servlet-name>
        <url-pattern>/ConnexionGrimpeur</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code id="err404">404</error-code>
        <location> /error404.html</location>
    </error-page>
</web-app>