<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- **************************************************************** -->
    <!-- GENERAL -->
    <!-- **************************************************************** -->
    <servlet>
        <servlet-name>Jsp_ErrInterne</servlet-name>
        <jsp-file>/WEB-INF/jsp/erreur/Jsp_ErrInterne.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Jsp_ErrCnxOuIns</servlet-name>
        <jsp-file>/WEB-INF/jsp/erreur/Jsp_ErrCnxOuIns.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>Jsp_LandingPage</servlet-name>
        <jsp-file>/WEB-INF/jsp/home/Jsp_LandingPage.jsp</jsp-file>
    </servlet>


    <!-- **************************************************************** -->
    <!-- TOPOS -->
    <!-- **************************************************************** -->

    <servlet>
        <servlet-name>Jsp_GestionTopo</servlet-name>
        <jsp-file>/WEB-INF/jsp/spot/Jsp_GestionTopo.jsp</jsp-file>
    </servlet>


    <!-- **************************************************************** -->
    <!-- SPOTS -->
    <!-- **************************************************************** -->
    <servlet>
        <servlet-name>Jsp_GestionSpot</servlet-name>
        <jsp-file>/WEB-INF/jsp/spot/Jsp_GestionSpot.jsp</jsp-file>
    </servlet>

    <!-- **************************************************************** -->

    <!-- **************************************************************** -->
    <!--    GRIMPEURS          -->
    <!-- **************************************************************** -->

    <servlet>
        <servlet-name>Jsp_Connexion</servlet-name>
        <jsp-file>/WEB-INF/jsp/grimpeur/Jsp_Connexion.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Jsp_Inscription</servlet-name>
        <jsp-file>/WEB-INF/jsp/grimpeur/Jsp_Inscription.jsp</jsp-file>
    </servlet>

    <!-- **************************************************************** -->

    <error-page>
        <error-code id="err404">404</error-code>
        <location> /error404.html</location>
    </error-page>
</web-app>